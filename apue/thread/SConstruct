env = Environment()
env.Append(CPPFLAGS = ['-Wall', '-g', '-std=c++0x', '-Wno-int-to-pointer-cast', '-Wno-format'])
env.Append(LIBS = ['pthread'])
env.Program('threadsimple_demo', ['threadsimpledemo.cpp', 'mutexdemo.cpp'])
env.Program('sem_unnamed_thread_demo', 'sem_unnamed_thread_demo.cpp')
env.Program('sem_unnamed_process_demo', ['sem_unnamed_process_demo.cpp'])
env.Program('cond_demo', ['conddemo.cpp'])
env.Program('barrier_demo', ['barrierdemo.cpp'])
env.Program('producter_consumer_demo', ['producter_consumer_demo.cpp'])
env.Program('reader_writer_rwlock_demo', ['reader_writer_rwlock_demo.cpp'])
env.Program('reader_writer_sem_demo', ['reader_writer_sem_demo.cpp'])
